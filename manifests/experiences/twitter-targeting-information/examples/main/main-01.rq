PREFIX :   <http://schema.org/>
PREFIX ex: <http://www.example.com/>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

SELECT ?advertiserName ?date ?time
WHERE {
    ?imp a :AdvertiserContentArticle .
    ?imp :creator ?advertiser .
    ?advertiser :name ?advertiserName .
    ?imp :contentReferenceTime ?d
    FILTER(?d > "2021-06-01T24:00:00Z"^^xsd:dateTime)
    BIND(substr(str(?d), -7) AS ?time)
    BIND(substr(str(?d), 1, 10) AS ?date)
}
