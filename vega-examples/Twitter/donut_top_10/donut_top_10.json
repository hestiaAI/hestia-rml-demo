{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Donut chart representing the top 10 advertisers",
  "width": 600,
  "height": 600,
  "autosize": "fit",
  "url": "data.json",
      "transform": [
        {
          "type": "joinaggregate",
          "fields": ["count"],
          "ops": ["sum"],
          "as": ["total"]
        },
        {"type": "extent", "field": "total", "signal": "extent"},
        {
          "type": "window",
          "sort": {"field": "count", "order": "descending"},
          "ops": ["rank"],
          "fields": ["count"],
          "as": ["rank"]
        },
        {"type": "filter", "expr": "datum.rank < 10"},
        {"type": "pie", "field": "count", "sort": true}
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "companyName"},
      "range": {"scheme": "category20"}
    }
  ],
  "marks": [
    {
      "type": "arc",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "companyName"},
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"},
          "tooltip": {
            "signal": "datum.companyName + ' ' + (datum.count ? ': targeted you ' + format(datum.count, ',.0f') + ' times' : '')"
          }
        },
        "update": {
          "startAngle": {"field": "startAngle"},
          "endAngle": {"field": "endAngle"},
          "padAngle": {"value": 0.02},
          "innerRadius": {"signal": "width / 5"},
          "outerRadius": {"signal": "width / 2.5"},
          "cornerRadius": {"value": 7},
          "opacity": {"value": 1},
          "zindex": {"value": 0}
        },
        "hover": {"opacity": {"value": 0.6}, "zindex": {"value": 1}}
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 2"},
          "fontSize": {"value": 54},
          "fontWeight": {"value": "bold"},
          "fill": {"value": "#2e3131"},
          "align": {"value": "center"}
        },
        "update": {"text": {"signal": "extent[1]"}}
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"signal": "width / 2"},
          "y": {"signal": "height / 1.8"},
          "fontSize": {"value": 32},
          "fontWeight": {"value": "bold"},
          "fill": {"value": "#2e3131"},
          "align": {"value": "center"}
        },
        "update": {"text": {"value": "ads"}}
      }
    }
  ],
  "title": {
    "text": "Top 10 companies that target you with ads",
    "encode": {
      "title": {
        "enter": {
          "fill": {"value": "#2e3131"},
          "fontSize": {"value": 22},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  },
  "config": {}
}