{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 300,
  "padding": 5,
  "signals": [
    {
      "name": "advertisers", "value": 1,
      "bind": {"input": "range", "name": "Advertisers", "min": 1, "max": 10, "step": 1}
    }
  ],
  "title": {
    "text": {"signal": "'Advertiser targetting you per day'"},
    "fontSize":{"value":18},
    "anchor": "start",
    "frame": "group"
  },
  "data": [
    {
      "name": "source",
      "values": [],
      "format": {"type": "json", "parse": {"date": "date:'%d-%m-%Y'"}}
    },
    {
      "name": "ranks",
      "source": "source",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["advertiserName"],
          "ops": ["sum"],
          "fields": ["count"],
          "as": ["count"]
        },
        {
          "type": "window",
          "sort": {"field": "count", "order": "descending"},
          "ops": ["row_number"], "as": ["rank"]
        }
      ]
    },
    {
      "name": "companies",
      "source": "source",
      "transform": [
        {
          "type": "lookup",
          "from": "ranks",
          "key": "advertiserName",
          "values": ["rank"],
          "fields": ["advertiserName"]
        },
        {
          "type": "formula",
          "as": "Category",
          "expr": "datum.rank <= advertisers ? datum.advertiserName : 'Others'"
        },
        {
          "type": "aggregate",
          "groupby": ["Category", "date"],
          "ops": ["sum"],
          "fields": ["count"],
          "as": ["count"]
        },
        {
          "type": "stack",
          "groupby": ["date"],
          "sort": {"field": "Category", "order":"descending"},
          "field": "count",
          "as": [
            "y0",
            "y1"
          ]
        }
      ]
    }

  ],

  "scales": [
    {
      "name": "x",
      "type": "time",
      "range": "width",
      "domain": {"data": "companies", "field": "date"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true, "zero": true,
      "domain": {"data": "companies", "field": "y1"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "companies", "field": "Category"}
    }
  ],

  "legends": [
    {
      "orient": "top-right",
      "fill": "color",
      "offset": -50,
      "zindex": 1,
      "symbolType": "square"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 7
    },
    {
      "scale": "y",
      "orient": "left"
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "companies"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "date"},
          "width": {"scale": "x", "band": 1, "offset": 5},
          "y": {"scale": "y", "field": "y0"},
          "y2": {"scale": "y", "field": "y1"},
          "fill": {"scale": "color", "field": "Category"},
          "tooltip": {
            "signal": "datum.Category +': ' + datum.count + ' '"
          }
        },
        "update": {
          "x": {"scale": "x", "field": "date"},
          "width": {"scale": "x", "band": 1, "offset": 5},
          "y": {"scale": "y", "field": "y0"},
          "y2": {"scale": "y", "field": "y1"},
          "fill": {"scale": "color", "field": "Category"},
          "tooltip": {
            "signal": "datum.Category +': ' + datum.count + ' '"
          },
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      }
    }
  ]
}
