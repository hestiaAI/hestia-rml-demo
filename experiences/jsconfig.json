{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"],
      "@@/*": ["./*"],
      "~~/*": ["./*"]
    }
  },
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true,
    "target": 2,
    "extensions": [".vue"]
  },
  "exclude": [
    ".circleci",
    ".github",
    ".husky",
    ".nuxt",
    ".vscode",
    "assets",
    "config",
    "dist",
    "node_modules",
    "vega-examples"
  ]
}
