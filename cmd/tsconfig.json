{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2016",
    "allowJs": true,
    "strict": true,
    "lib": [
      "es2020"
    ],
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "resolveJsonModule": true,
    // https://bobbyhadz.com/blog/typescript-cannot-find-module
    "moduleResolution": "node"
  },
  "ts-node": {
    "compilerOptions": {
      // compilerOptions specified here will override those declared above
    }
  }
}
