{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2022",
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@/*": ["../../lib/*", "../../../lib/*"]
    },
    "baseUrl": "./",
    // https://bobbyhadz.com/blog/typescript-cannot-find-module
    "moduleResolution": "node",
    "outDir": "bin",
    "resolveJsonModule": true
  },
  // "files": ["index.mts", "schema.mts", "./custom.d.ts"],
  "include": [
    "*.d.ts",
    "*.mts",
    "./utils/*.mts",
    "../../../data-experience/src/utils/*.js"
  ]
}
