{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@/*": ["../lib/*"]
    },
    "baseUrl": "./",
    // https://bobbyhadz.com/blog/typescript-cannot-find-module
    "moduleResolution": "node",
    "outDir": "bin"
  },
  "files": ["index.ts"],
  // "include": [
  //   "*.ts"
  // ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      // compilerOptions specified here will override those declared above
    }
  }
}
