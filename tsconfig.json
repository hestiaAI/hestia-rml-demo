{
  "compilerOptions": {
    "module": "es2020",
    "target": "es2016",
    "allowJs": false,
    "strict": false,
    "lib": ["dom", "es2017"],
    // TS v4.2
    // "explainFiles": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "baseUrl": ".",

    // https://bobbyhadz.com/blog/typescript-cannot-find-module
    "moduleResolution": "node",

    "paths": {
      "@/*": ["lib/*"],
      "types/*": ["lib/types/*"],
      "@hestialabs/*": ["packages/*/src/index"]
    }
  },
  "exclude": ["node_modules"]
}
